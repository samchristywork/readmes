#!/bin/bash

if [ -z "$1" ]; then
  echo "Usage: render <path-to-readme>"
  exit 1
fi

if [ ! -f "$1" ]; then
  echo "File not found: $1"
  exit 1
fi

if ! command -v gh &> /dev/null; then
  echo "gh is not installed. Please install it from https://cli.github.com/"
  exit 1
fi

if ! command -v firefox &> /dev/null; then
  echo "firefox is not installed. Please install it from https://www.mozilla.org/en-US/firefox/new/"
  exit 1
fi

mkdir -p build

cp "$1" build/README.md

(
cat <<EOF
<!doctype html>
<html>
<head>
  <title>README - Generated from $1</title>
  <meta charset="utf-8" />
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    body {
      background-color: #f8f8f8;
    }
    .main {
      max-width: 800px;
      margin: 0 auto;
      background-color: white;
      padding: 1rem;
      border-radius: 1rem;
      border: 1px solid #ddd;
    }
  </style>
</head>
<body>
  <div class="main">
EOF

gh api \
  --method POST \
  -H "Accept: application/vnd.github+json" \
  -H "X-GitHub-Api-Version: 2022-11-28" \
  /markdown \
  -f text="$(cat build/README.md)"

cat <<EOF
  </div>
</body>
EOF
) > build/index.html

firefox build/index.html
